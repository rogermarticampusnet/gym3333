---
import Layout from "../layouts/Layout.astro";
import LocationCard from "../components/LocationCard.astro"
--- 
<Layout title="Blog">
    <div class="bg-gray-100 w-5/6 mx-auto py-16 my-6 rounded-xl">
        <div class="grid grid-rows-3 gap-4 mx-auto w-4/6">
            <p class="text-3xl font-bold text-center">Fitness Blog</p>
            <LocationCard
            gym="The Importance of Regular Exercise"
            address="Why exercise regularly?"/>
            <LocationCard
            gym="Healthy Eating for Fitness"
            address="Healthy eating for fitness?"/>
            <LocationCard
            gym="Benefits of Cardio Workouts"
            address="What are the benefits of cardio?"/>
            <p>More fitness topics coming soon...</p>
        </div>
    </div>
</Layout>

<style>
    p {
        font-weight: bold;
    }
</style>