---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Log in">
<div
class="bg-gray-100 w-5/6 h-full mx-auto rounded-lg mt-10 mb-10 py-20 px-56"
>
  <div
    class="block rounded-3xl bg-gray-900"
  >
    <form class="mx-auto py-16 block items-center px-36">
        <div class="mb-6">
          <label for="email" class="block mb-2 text-sm font-medium text-gray-100">Your email</label>
          <input type="email" id="email" class="w-full rounded-md border-0 bg-white/5 px-3.5 py-2 text-white shadow-sm ring-1 ring-inset ring-white/10 focus:ring-2 focus:ring-inset focus:ring-[var(--ten)]" placeholder="thestrongest@gym.com" required>
        </div>

        <div class="mb-6">
          <label for="password" class="block mb-2 text-sm font-medium text-gray-100">Your password</label>
          <input type="password" id="password" class="w-full rounded-md border-0 bg-white/5 px-3.5 py-2 text-white shadow-sm ring-1 ring-inset ring-white/10 focus:ring-2 focus:ring-inset focus:ring-[var(--ten)]" placeholder="Password123*"required>
        </div>

        <div class="flex items-start mb-6">
          <div class="flex items-center h-5">
            <input id="remember" type="checkbox" value="" class="w-4 h-4 border border-gray-300 rounded focus:ring-2 focus:ring-[var(--ten)]" required>
          </div>
          <label for="remember" class="ml-2 text-sm font-medium text-gray-100">Remember me</label>
        </div>

        <button type="submit" class="text-gray-900 font-bold bg-[var(--ten)] duration-300 ease-in-out hover:opacity-80 focus:ring-4 focus:outline-none rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center">Submit</button>
    </form>
  </div>
</Layout>

<style>
  input["type:checkbox"] input:checked {
    background-color:var(--ten);
  }

</style>